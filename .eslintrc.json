{
	"env": {
		"browser": false,
		"commonjs": true,
        "es2022": true,
		"node": true,
		"jest": true
	},
	"parserOptions": {
        "ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"no-const-assign": "warn",
		"no-this-before-super": "warn",
		"no-undef": "warn",
		"no-unreachable": "warn",
		"no-unused-vars": "off",
		"constructor-super": "warn",
		"valid-typeof": "warn"
	}
}
