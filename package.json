{
	"name": "vs64",
	"displayName": "vs64",
	"description": "VS64 - The C64 Development Environment",
	"version": "2.0.0",
	"preview": true,
	"publisher": "rosc",
	"license": "GPL-3.0",
	"icon": "images/icon.png",
	"author": {
		"name": "Roland Schabenberger"
	},
	"private": true,
	"engines": {
		"vscode": "^1.73.0"
	},
	"main": "./main.js",
	"bin": "main.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/rolandshacks/vs64"
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "cd test && jest --runInBand --config ./jest.config.js"
	},
	"dependencies": {
		"@vscode/debugadapter": "1.51.0",
		"await-notify": "^1.0.1"
	},
	"devDependencies": {
		"@types/node": "^18.11.11",
		"@types/vscode": "^1.73.0",
		"eslint": "^8.29.0",
		"jest": "^29.3.1",
		"typescript": "^3.6.2"
	},
	"galleryBanner": {
		"color": "#6c9fd2",
		"theme": "light"
	},
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:asm",
		"onCommand:c64.build",
		"onDebug",
		"onCommand:workbench.action.tasks.runTask"
	],
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters",
		"Debuggers",
		"Formatters"
	],
	"contributes": {
		"problemMatchers": [
			{
				"name": "acme",
				"owner": "vs64",
				"fileLocation": [
					"autoDetect",
					"${workspaceFolder}"
				],
				"pattern": {
					"regexp": "^\\s*(\\w*)\\s*-\\s*\\w*\\s*([\\w:\\\\/\\.]*)\\s*,\\s*\\w*\\s*(\\d*)\\s*(\\(.*\\))?\\s*:\\s*(.*)$",
					"severity": 1,
					"file": 2,
					"location": 3,
					"message": 5
				}
			}
		],
		"languages": [
			{
				"id": "asm",
				"aliases": [
					"6502",
					"asm",
					"acme"
				],
				"extensions": [
					".asm",
					".acme"
				],
				"configuration": "./language/asm.language.json"
			}
		],
		"grammars": [
			{
				"language": "asm",
				"scopeName": "source.asm",
				"path": "./language/asm.grammar.json"
			}
		],
		"snippets": [
			{
				"language": "asm",
				"path": "./language/asm.snippets.json"
			}
		],
		"customEditors": [
			{
				"viewType": "vs64.prg",
				"displayName": "C64 Program",
				"selector": [
					{
						"filenamePattern": "*.prg"
					}
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "C64 tools configuration",
			"properties": {
				"c64.autoBuild": {
					"type": "boolean",
					"default": true,
					"description": "Enable automatic build after save"
				},
				"c64.compilerExecutable": {
					"type": "string",
					"default": "acme",
					"description": "Path to compiler executable"
				},
				"c64.compilerDefines": {
					"type": "string",
					"default": "",
					"description": "Global compiler defines"
				},
				"c64.compilerIncludePaths": {
					"type": "string",
					"default": "",
					"description": "Global compiler include paths"
				},
				"c64.compilerArgs": {
					"type": "string",
					"default": "",
					"description": "Global additional compiler command line options"
				},
				"c64.emulatorExecutable": {
					"type": "string",
					"default": "x64sc",
					"description": "Path to emulator executable"
				},
				"c64.emulatorArgs": {
					"type": "string",
					"default": "",
					"description": "Additional emulator command line options"
				},
				"c64.loglevel": {
					"type": "string",
					"default": "info",
					"enum": [
						"error",
						"warn",
						"info",
						"debug",
						"trace"
					],
					"enumDescriptions": [
						"Set logging level to ERROR",
						"Set logging level to WARNING",
						"Set logging level to INFO (default)",
						"Set logging level to DEBUG. Use this to show debugging information",
						"Set logging level to TRACE. This is the maximum verbosity setting."
					],
					"description": "Set console output verbosity level"
				}
			}
		},
		"breakpoints": [
			{
				"language": "asm"
			}
		],
		"taskDefinitions": [
			{
				"type": "vs64",
				"required": [],
				"properties": {
					"action": {
						"type": "string",
						"description": "Task action to be performed. 'build', 'rebuild' and 'clean' is supported."
					},
					"project": {
						"type": "string",
						"description": "Optional project file if not using the default 'project-config.json'."
					}
				}
			}
		],
		"debuggers": [
			{
				"type": "6502",
				"label": "6502 Cpu Debugger",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Path to compiled program",
								"default": ""
							},
							"pc": {
								"type": "string",
								"description": "Override initial program counter (PC)",
								"default": "$0000"
							}
						}
					}
				},
				"initialConfigurations": [],
				"configurationSnippets": [
					{
						"label": "Launch 6502 program",
						"description": "A new configuration for the 6502 debugger.",
						"body": {
							"type": "6502",
							"request": "launch",
							"name": "Launch Program",
							"program": "${workspaceFolder}/build/program.prg"
						}
					}
				],
				"variables": {}
			},
			{
				"type": "vice",
				"label": "Debugger for Vice Emulator",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Path to compiled program",
								"default": ""
							},
							"hostname": {
								"type": "string",
								"description": "Hostname or IP address of VICE host process",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "Port of VICE host process",
								"default": "6502"
							}
						}
					},
					"attach": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Path to compiled program",
								"default": ""
							},
							"hostname": {
								"type": "string",
								"description": "Hostname or IP address of VICE host process",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "Port of VICE host process",
								"default": "6502"
							}
						}
					}
				},
				"initialConfigurations": [],
				"configurationSnippets": [
					{
						"label": "Launch in Vice Emulator",
						"description": "A new configuration for the Vice debugger.",
						"body": {
							"type": "vice",
							"request": "launch",
							"name": "Launch Program",
							"program": "${workspaceFolder}/build/program.prg"
						}
					}
				],
				"variables": {}
			}
		]
	}
}
