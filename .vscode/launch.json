{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			//"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			]
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			//"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/test"
			]
		},
        {
            "name": "Run Vice Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test/vice_debug.run.js",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "name": "Run Emu Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test/emu_debug.run.js",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "name": "Run Builder",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test/builder.run.js",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "name": "Run Expression Resolver",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test/expr.run.js",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "name": "Run DebugInfo",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test/debug_info.run.js",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "name": "Unit Tests",
            "type": "node",
            "request": "launch",
			"console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceFolder}/test",
			"args": [
				"--runInBand",
				"--config", "${workspaceFolder}/test/jest.config.js",
				"-t", "sorted_array"
			]
        }
	]
}
